[
  {
    "name": "static-ingress",
    "image": "${image_identifier}",
    "cpu": ${allocated_cpu},
    "memory": ${allocated_memory},
    "essential": true,
    "portMappings": [
      {
        "containerPort": ${bind_port},
        "hostPort": ${bind_port}
      }
    ],
    "environment": [{
      "Name": "BACKEND",
      "Value": "${backend}"
    }, {
      "Name": "BIND_PORT",
      "Value": "${bind_port}"
    }, {
      "Name": "BACKEND_PORT",
      "Value": "${backend_port}"
    }, {
      "Name": "RESOLVER",
      "Value": "169.254.169.253:53"
    }],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${deployment}-hub",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "static-ingress-${bind_port}",
        "awslogs-create-group": "true"
      }
    }
  }
]
