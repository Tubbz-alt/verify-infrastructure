[
  {
    "name": "static-ingress",
    "image": "${image_and_tag}",
    "cpu": 0,
    "memory": 3500,
    "essential": true,
    "portMappings": [
      {
        "containerPort": ${port},
        "hostPort": ${port}
      }
    ],
    "environment": [{
      "Name": "BACKEND",
      "Value": "${backend}"
    }, {
      "Name": "PORT",
      "Value": "${port}"
    }, {
      "Name": "RESOLVER",
      "Value": "169.254.169.253:53"
    }],
    "linuxParameters": {
      "capabilities": {
        "add": ["NET_ADMIN", "NET_BIND_SERVICE"],
        "drop": []
      }
    },
    "systemControls": [
      {
        "namespace": "net.ipv4.ip_unprivileged_port_start",
        "value": "0"
      }
    ]
  }
]
