[
  {
    "name": "metadata-exporter",
    "image": "${image_and_tag}",
    "cpu": 0,
    "memory": 1024,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 9199,
        "hostPort": 9199
      }
    ],
    "entryPoint": [
      "bash",
      "-c",
      "bundle exec bin/prometheus-metadata-exporter -m https://${signin_domain}/SAML2/metadata/federation -p 9199 --cas /tmp/cas/${deployment}"
    ],
    "environment": [
      {
        "Name": "http_proxy",
        "Value": "${egress_proxy_url_with_port}"
      },
      {
        "Name": "no_proxy",
        "Value": "${signin_domain}"
      }
    ]
  }
]
