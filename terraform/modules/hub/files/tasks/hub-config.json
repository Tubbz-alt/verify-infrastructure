[
  {
    "name": "nginx",
    "image": "${nginx_image_identifier}",
    "cpu": 0,
    "memory": 250,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8443,
        "hostPort": 8443
      }
    ],
    "links": ["config"],
    "environment": [
      {
        "Name": "LOCATION_BLOCKS",
        "Value": "${location_blocks_base64}"
      }
    ]
  },
  {
    "name": "config",
    "image": "${image_and_tag}",
    "cpu": 0,
    "memory": 3500,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080
      }
    ],
    "entryPoint": [
      "/verify-hub/bin/config",
      "server",
      "/tmp/config.yml"
    ],
    "secrets": [
      {
        "name": "SENTRY_DSN",
        "valueFrom": "arn:aws:ssm:${region}:${account_id}:parameter/${deployment}/ecs-app-shared/sentry-dsn"
      }
    ],
    "environment": [
      {
        "Name": "CONFIG_DATA_PATH",
        "Value": "/tmp/federation/configuration/config-service-data/${deployment}"
      },
      {
        "Name": "RP_TRUSTSTORE_PASSWORD",
        "Value": "${truststore_password}"
      },
      {
        "Name": "CLIENT_TRUSTSTORE_PASSWORD",
        "Value": "${truststore_password}"
      },
      {
        "Name": "DEPLOYMENT",
        "Value": "${deployment}"
      },
      {
        "Name": "JAVA_OPTS",
        "Value": "-Dservice.name=config -Xms3000m -Xmx3200m -XX:+HeapDumpOnOutOfMemoryError -Dnetworkaddress.cache.ttl=5 -Dnetworkaddress.cache.negative.ttl=5"
      }
    ]
  }
]
