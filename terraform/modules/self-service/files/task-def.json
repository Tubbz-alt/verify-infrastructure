[
    {
      "essential": true,
      "image": "753415395406.dkr.ecr.eu-west-2.amazonaws.com/platform-deployer-verify-self-service:latest-${deployment}",
      "memory": 1024,
      "name": "self-service",
      "portMappings": [
        {
          "containerPort": 8080,
          "hostPort": 8080
        }
      ],
      "entryPoint": [
        "bundle",
        "exec",
        "puma",
        "-p",
        "8080",
        "-b",
        "tcp://0.0.0.0"
      ],
      "environment": [
        {
          "name": "RAILS_ENV",
          "value": "production"
        },
        {
          "name": "AWS_BUCKET",
          "value": "${aws_bucket}"
        },
        {
          "name": "DATABASE_HOST",
          "value": "${database_host}"
        },
        {
          "name": "DATABASE_NAME",
          "value": "${database_name}"
        },
        {
          "name": "DATABASE_USERNAME",
          "value": "${database_username}"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY_BASE",
          "valueFrom": "${rails_secret_key_base}"
        },
        {
          "name": "DATABASE_PASSWORD",
          "valueFrom": "${database_password_arn}"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "self-service",
          "awslogs-region": "eu-west-2",
          "awslogs-stream-prefix": "self-service"
        }
      }
    }
  ]
