---
applications:
  - name: <%= ENV['DEPLOYMENT'] %>-test-rp-msa
    routes:
      - route: <%= ENV['DEPLOYMENT'] %>-test-rp-msa.apps.internal
      - route: <%= ENV['DEPLOYMENT'] %>-test-rp-msa.cloudapps.digital
    memory: 1G
    buildpacks:
      - java_buildpack
    env:
      CONFIG_FILE: /app/msa/test-rp-msa.yml
      LOG_LEVEL: INFO
      TEST_RP_MSA_URL: https://<%= ENV['DEPLOYMENT'] %>-test-rp.cloudapps.digital/matching-service/POST
      TEST_RP_ROUTE: <%= ENV['DEPLOYMENT'] %>-test-rp.apps.internal:8080
      METADATA_URL: https://verify-<%= ENV['DEPLOYMENT'] %>-metadata.cloudapps.digital/metadata.xml
      SIGNIN_DOMAIN: <%= ENV['DEPLOYMENT'] %>.signin.service.gov.uk
      METADATA_ENTITY_ID: https://signin.service.gov.uk
      TRUSTSTORE_PATH: /app/msa/truststores/<%= ENV['TRUSTSTORE'] %>
      TRUSTSTORE_PASSWORD: puppet
      EUROPEAN_IDENTITY_ENABLED: true
      HUB_CONNECTOR_ENTITY_ID: https://hub-connector-eidas-<%= ENV['DEPLOYMENT'] %>.cloudapps.digital/metadata.xml
      TRUST_ANCHOR_URI: https://www.<%= ENV['DEPLOYMENT'] %>.signin.service.gov.uk/SAML2/metadata/trust-anchor
      METADATA_SOURCE_URI: https://www.<%= ENV['DEPLOYMENT'] %>.signin.service.gov.uk/SAML2/metadata/aggregator
      ENCRYPTION_KEY: <%= ENV['MSA_ENCRYPTION_KEY'] %>
      ENCRYPTION_CERT: <%= ENV['MSA_ENCRYPTION_CERT'] %>
      SIGNING_KEY: <%= ENV['MSA_SIGNING_KEY'] %>
      SIGNING_CERT: <%= ENV['MSA_SIGNING_CERT'] %>
